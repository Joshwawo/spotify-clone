---
import type { Playlist } from "@/lib/data"
import {getNewReleases} from '@/utils/info'
import {type Item} from '@/utils/info'

interface Props {
  playlist: Item
}

const { playlist } = Astro.props
const { artists, id, name, images } = playlist

const artistsString = artists.map(({ name }) => name).join(", ")

---

<a
  href={`/playlist/${id}`}
  class="playlist-item flex relative p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-800"
>
  <picture class="h-12 w-12 flex-none">
    <img
      src={images[0].url}
      alt={`Cover of ${name} by ${artistsString}`}
      class="object-cover w-full h-full rounded-md"
    />
  </picture>

  <div class="flex flex-auto flex-col truncate">
    <h4 class="text-white text-sm">
      {name}
    </h4>

    <span class="text-xs text-gray-400">
      {artistsString}
    </span>
  </div>
</a>
